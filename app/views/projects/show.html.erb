<h1><%= @project.name %></h1>

<h3>Company: <%= @project.company.name %></h3>
<p>Default rate: $<%= @project.default_rate %></p>
<p>Slug: <%= @project.slug %></p>

<table>
	<tbody>
		<tr>
			<th></th>
			<th>User</th>
			<th>Date/Time</th>
			<th>Hours</th>
		</tr>
		<% @project.works.each do |work| %>
		<tr>	
			<td><%= link_to 'View', work %></td>
			<td><%= work.user %></td>
			<td><%= work.datetimeperformed.strftime('%m/%d/%Y %H:%M') %></td>
			<td><%= work.hours %></td>
		</tr>
		<% end %>
	</tbody>
</table>


<% content_for :aside do %>
	<% render 'sidebar' %>
<% end %>