<h1><%= @project.name %></h1>

<%= link_to 'Edit Project', edit_project_path %>

<h3>Company: <%= @project.company.name %></h3>
<p>Default rate: $<%= @project.default_rate %></p>
<p>Slug: <%= @project.slug %></p>

<% if @project.works.size > 0 %>
<table>
	<tbody>
		<tr>
			<th></th>
			<th>User</th>
			<th>Project</th>
			<th>Date/Time</th>
			<th>Hours</th>
		</tr>
		<%= render  partial: 'works/work', collection: @project.works %>
	</tbody>
</table>
<% else %>
<p>No Projects</p>
<% end %>

<% content_for :aside do %>
	<% render 'sidebar' %>
<% end %>