<h1>New Project</h1>

<!-- if there are any errors, do the following -->
<% if @project.errors.any? %>
	<div id="errors">
		<p>Please correct the following <%= pluralize(@project.errors.count, "error") %>:</p>
		<ul>
<!-- loop over errors and iterate with each loop, give error message to user -->
			<% @project.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>


<!-- form for object @project from new action -->
<%= form_for(@project) do |f| %>
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div>
		<%= f.label :slug %>
		<%= f.text_field :slug %>
	</div>
	<div>
		<%= f.label :default_rate %>
		<%= f.text_field :default_rate %>
	</div>
	<div>
		<%= f.label :company_id %>
		<%= f.collection_select(:company_id, Company.all, :id, :name, prompt: true) %>
	</div>
	<div>
		<%= f.submit "Create Project" %>
	</div>
<% end %>

<% content_for :aside do %>
	<%= render 'sidebar' %>
<% end %>